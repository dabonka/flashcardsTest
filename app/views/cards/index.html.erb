<h1>Listing cards</h1>
 
<table>
  <tr>
    <th>Original Text</th>
    <th>Translated Text</th>
	<th>Review Date</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
 
  <% @cards.each do |card| %>
    <tr>
      <td><%= card.original_text %></td>
      <td><%= card.translated_text %></td>
      <td><%= card.review_date.strftime("%d/%m/%Y") %></td>
      <td><%= link_to("Edit", edit_card_path(card) ) %></td>
      <td><%= link_to("Delete",card_path(card), method: :delete) %></td>

    </tr>
  <% end %>
</table>